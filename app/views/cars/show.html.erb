<h1>Cars#show</h1>
<p>Find me in app/views/cars/show.html.erb</p>

<%= form_with model: @booking, url: bookings_path do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field :car_id, value: @car.id %>

  <div class="form-group">
    <%= f.label :starts_at %>
    <%= f.date_field :starts_at, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :ends_at %>
    <%= f.date_field :ends_at, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit "Book now", class: "btn btn-primary" %>
  </div>
<% end %>
