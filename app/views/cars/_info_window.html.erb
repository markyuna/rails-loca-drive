<%= link_to car do %>
  <% if car.photo.key.nil? %>
    <%= image_tag "no-image.png", class:"img-fluid width: 100% height: auto" %>
  <% else %>
    <%= cl_image_tag car.photo.key, crop: :fill, class:"img-fluid width: 100% height: auto" %>
  <% end %>
  <div class="map-card">
    <p><span class="font-weight-bold" ><i class="fa fa-user"></i></span>  <%= car.brand %></p>
    <p><span class="font-weight-bold" ><i class="fa fa-location-arrow"></i></span>  <%= car.address %><strong><%= car.city %></strong></p>
    <p>â‚¬/day <span class="font-weight-bold"><%= car.price_per_day %></span></p>
  </div>
<% end %>
